<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpeedDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!-- Full screen  application theme. -->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="speedButtonStyle" parent="android:style/Widget.Button">
         <item name="android:textSize">@dimen/btnShowSpeedTextSize</item>
         <item name="android:layout_marginLeft">@dimen/parentLayoutMarginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/parentLayoutMarginLeftRight</item>
        <item name="android:layout_marginBottom">@dimen/btn_show_altitude_margin_bottom</item>
        <item name="android:background">@drawable/rounded_shape_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
